{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug wasm export",
      "type": "debugpy",
      "request": "launch",
      "program": "scripts/debug_wasm_export.py",
      "console": "integratedTerminal",
      "args": [
        "--use-local-wasm"
      ]
    },
    {
      "name": "Boss service (start_service.py)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/start_service.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "subProcess": true,
      "env": {
        "HEADLESS": "0",
        "PYTHONUNBUFFERED": "1",
        "FORCE_CLEANUP_PORT": "true"
      }
    },
    {
      "name": "Streamlit: boss_app.py (Debug)",
      "type": "debugpy",
      "request": "launch",
      "program": "/opt/homebrew/bin/streamlit",
      "console": "integratedTerminal",
      "justMyCode": false,
      "subProcess": true,
      "env": {
        "STREAMLIT_ENV": "development",
        "STREAMLIT_LOGGER_LEVEL": "debug",
        "STREAMLIT_SERVER_HEADLESS": "false",
        "STREAMLIT_SERVER_RUN_ON_SAVE": "true",
        "STREAMLIT_SERVER_ENABLE_CORS": "false",
        "PYTHONUNBUFFERED": "1"
      },
      "args": [
        "run",
        "boss_app.py",
        "--server.port=8501",
        "--server.address=localhost",
        "--server.headless=false",
        "--server.runOnSave=true",
        "--server.enableCORS=false",
        "--logger.level=debug"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Streamlit: Python Module (Debug)",
      "type": "debugpy",
      "request": "launch",
      "module": "streamlit",
      "console": "integratedTerminal",
      "justMyCode": false,
      "subProcess": true,
      "env": {
        "STREAMLIT_ENV": "development",
        "STREAMLIT_LOGGER_LEVEL": "debug",
        "STREAMLIT_SERVER_HEADLESS": "false",
        "STREAMLIT_SERVER_RUN_ON_SAVE": "true",
        "STREAMLIT_SERVER_ENABLE_CORS": "false",
        "PYTHONUNBUFFERED": "1"
      },
      "args": [
        "run",
        "boss_app.py",
        "--server.port=8501",
        "--server.address=localhost",
        "--server.headless=false",
        "--server.runOnSave=true",
        "--server.enableCORS=false",
        "--logger.level=debug"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Streamlit: Python Launcher (Debug)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/launch_streamlit.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "subProcess": true,
      "env": {
        "STREAMLIT_ENV": "development",
        "STREAMLIT_LOGGER_LEVEL": "debug",
        "STREAMLIT_SERVER_HEADLESS": "false",
        "STREAMLIT_SERVER_RUN_ON_SAVE": "true",
        "STREAMLIT_SERVER_ENABLE_CORS": "false",
        "PYTHONUNBUFFERED": "1"
      },
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Streamlit: boss_app.py (Production)",
      "type": "debugpy",
      "request": "launch",
      "program": "/opt/homebrew/bin/streamlit",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "STREAMLIT_ENV": "production"
      },
      "args": [
        "run",
        "boss_app.py",
        "--server.port=8501"
      ],
      "cwd": "${workspaceFolder}"
    }
  ]
}
